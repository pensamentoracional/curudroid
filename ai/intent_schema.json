{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Curudroid Intent",
  "type": "object",
  "required": [
    "intent",
    "reason",
    "confidence",
    "created_at"
  ],
  "properties": {
    "intent": {
      "type": "string",
      "enum": [
        "scan_logs",
        "summarize_logs",
        "health_check"
      ]
    },
    "reason": {
      "type": "string",
      "minLength": 5
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
